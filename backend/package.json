{
  "name": "naver-keyword-saas-backend",
  "version": "2.0.0",
  "type": "module",
  "description": "네이버 키워드 분석 SaaS - Backend API",
  "scripts": {
    "dev": "wrangler pages dev dist --d1=naver-keyword-saas --local --ip 0.0.0.0 --port 3000",
    "dev:sandbox": "wrangler pages dev dist --d1=naver-keyword-saas --local --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist --project-name naver-keyword-saas",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:create": "wrangler d1 create naver-keyword-saas",
    "db:migrate:local": "wrangler d1 migrations apply naver-keyword-saas --local",
    "db:migrate:prod": "wrangler d1 migrations apply naver-keyword-saas",
    "db:seed": "wrangler d1 execute naver-keyword-saas --local --file=./seed.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000/api/health"
  },
  "dependencies": {
    "hono": "^4.11.7",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250705.0",
    "@hono/vite-cloudflare-pages": "^0.4.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.7",
    "typescript": "^5.0.0",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
